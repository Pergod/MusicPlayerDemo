<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.geekband.mywork9.MainActivity">
    <TextView
        android:id="@+id/title_text_view"
        android:text="@string/list"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_marginTop="40dp"
        android:id="@+id/song_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"/>

    <ImageButton
        android:id="@+id/controll_button"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/next_button"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/next"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/controll_button"
        android:layout_toEndOf="@+id/controll_button"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <ImageButton
        android:id="@+id/previous_button"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/previous"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/controll_button"
        android:layout_toLeftOf="@+id/controll_button"
        android:layout_toStartOf="@+id/controll_button"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

</RelativeLayout>
